<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Join us</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+KR&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      * {
        font-family: "Noto Serif KR", serif;
        color: #78715e;
      }
    </style>
  </head>

  <body style="background-color: #ece8e4; text-align: center">
    <div class="container" style="width: 40%; height: 100%">
      <section style="margin-top: 5rem">
        <a href="/user/login" style="display: flex; justify-content: center">
          <div>
            <img
              src="/logo.png"
              style="width: 80%"
              class="mb-5 mx-auto"
              alt="non-blog"
            />
          </div>
        </a>
        <form>
          <div class="form-floating" style="margin-bottom: 1rem">
            <input
              type="email"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
            />
            <label for="floatingPassword">Email</label>
          </div>
          <div class="form-floating" id="pw" style="margin-bottom: 1rem">
            <input
              type="password"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
            />
            <label for="floatingPassword">Password</label>
          </div>
          <div class="form-floating" id="pwck" style="margin-bottom: 1rem">
            <input
              type="password"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
            />
            <label for="floatingPassword">Ck password</label>
          </div>
          <div class="form-floating" style="margin-bottom: 1rem">
            <input
              type="text"
              class="form-control"
              id="floatingPassword"
              placeholder="Password"
            />
            <label for="floatingPassword">Nickname</label>
          </div>

          <button
            type="button"
            onclick="signUp()"
            class="btn mb-2"
            style="
              width: 100%;
              color: white;
              background-color: #ae7f5f;
              height: 3rem;
            "
          >
            Join us
          </button>
        </form>
        <div style="display: flex; justify-content: end">
          <div
            style="
              align-items: center;
              display: flex;
              justify-content: center;
              margin-bottom: 5px;
            "
          >
            <p
              style="
                margin: 5px;

                font-size: 15px;
                align-items: center;
              "
            >
              회원등록 되어있다면
            </p>
            <a href="/user/login">Log in</a>
          </div>
        </div>
        <button type="button" onclick="onNext()">
          다음페이지(없어질 버튼)
        </button>
      </section>
    </div>
    <script>
      //{ email: varchar, nickname: varchar, password: varchar, checkpassword: varchar }

      const onNext = () => {
        location.href = "/notebook/allblog";
      };
      const signUp = () => {
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const chpassword = document.getElementById("chpassword").value;
        const nickname = document.getElementById("name").value;
        document.getElementById("err").innerHTML = "";

        if (password != chpassword) {
          document.getElementById("err").innerHTML =
            "비밀번호는 같아야 합니다.";
        }
        const user = {
          email,
          password,
          nickname,
        };

        console.log(user);

        axios({
          method: "post",
          url: "/user/signup",
          data: user,
        })
          .then((result) => {
            console.log(result);
          })
          .catch((err) => {
            console.log(err);
          });
      };
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
