  <body>
    <div>
      <header><%- include ('fragment/header') %></header>
      <section>
        <div style="padding: 80px">
          <form enctype="multipart/form-data">
            <div style="justify-content: space-between; display: flex">
              <div>
                <label for="file">

                  <h3 id="blogid"><%= note.noteId  %></h3>
                  <div>Î≤àÏùò Î∏îÎ°úÍ∑∏</div>
                </label>
                <input
