<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogging</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+KR&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <style>
      * {
        font-family: "Noto Serif KR", serif;
        color: #78715e;
      }

      #footer {
        font-weight: 100;
        background-color: #ece8e4;
        padding: 20px;
      }

      .btn-upload {
        text-align: center;

        &:hover {
          background: #e1ddd6;
          color: #fff;
        }
      }

      #file {
        display: none;
      }
    </style>
  </head>

  <body>
    <div>
      <header><%- include ('fragment/header') %></header>
      <section>
        <div style="padding: 80px">
          <form enctype="multipart/form-data">
            <div style="justify-content: space-between; display: flex">
              <div>
                <label for="file">
                  <div
                    type="button"
                    class="btn btn-lg mb-3"
                    style="
                      color: #ae7f5f;
                      border: 2px solid #ae7f5f;
                      font-weight: bold;
                    "
                  >
                    사진 바꾸기
                  </div>
                </label>
                <input
                  type="file"
                  id="file"
                  accept="image/*"
                  style="display: none"
                  required
                />
              </div>

              <img
                onclick="deleteImg()"
                src=""
                alt=""
                style="width: 60%; margin: 1rem"
                id="selectedImg"
              />
            </div>
            <div class="row">
              <div class="mb-3">
                <input
                  style="height: 60px"
                  type="text"
                  class="form-control fs-3"
                  id="title"
                  placeholder="제목을 입력하세요."
                />
              </div>
              <div class="mb-3">
                <div id="summernote" name="editordata"></div>
              </div>
              <div style="display: flex; justify-content: end">
                <div
                  style="color: rgb(248, 78, 78); margin: 8px"
                  id="err"
                ></div>
                <button
                  type="button"
                  onclick="blogging()"
                  class="btn btn-lg"
                  style="color: white; background-color: #ae7f5f"
                >
                  Blogging
                </button>
              </div>
            </div>
          </form>
        </div>
      </section>

      <footer><%- include ('fragment/footer') %></footer>

      <script>
        const fileDOM = document.getElementById("file");
        const preview = document.getElementById("imgbox");
        const selectImg = document.getElementById("selectedImg");

        const form = new FormData();

        const deleteImg = () => {
          selectImg.src = "";
        };

        function updateDisplayedTitle(value) {
          // Assuming you have a span with id "displayedTitle" to show the title
          document.getElementById("displayedTitle").textContent = value;
        }

        const blogging = () => {
          document.getElementById("err").innerHTML = "";
          const title = document.getElementById("title").value;
          const content = $("#summernote").summernote("code");
          const blog = { title, content };

          // form.append('blog',JSON.stringify(blog))

          form.append("blog", JSON.stringify(blog));

          console.log(form.get("blog"));
          console.log(form.get("img"));
          axios
            .post("/notebook/write", form)
            .then((result) => {
              location.href = "/notebook";
            })
            .catch((err) => {
              console.log(err);
            });
        };

        $(document).ready(function () {
          $("#summernote").summernote({
            placeholder: "당신의 이야기를 들려주세요.😊",
            tabsize: 2,
            height: 300,
            lang: "ko-KR",
            toolbar: [
              // [groupName, [list of button]]
              ["style", ["bold", "italic", "underline"]],
              ["font", ["strikethrough"]],

              ["para", ["ul", "ol"]],
            ],
          });
        });

        fileDOM.addEventListener("change", () => {
          const reader = new FileReader();

          reader.readAsDataURL(fileDOM.files[0]);
          const file = fileDOM.files[0];
          if (file) {
            form.append("img", file);

            selectImg.src = URL.createObjectURL(file);
          }
        });
      </script>
      <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"
      ></script>
      <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    </div>
  </body>
</html>
