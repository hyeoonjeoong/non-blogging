            style="border: none; "
          />
        <div class="btnBox text-center mx-auto py-3" style="width: fit-content;" >
          <button
            type="button"
            class="btn mb-2 custom-margin "
            style="background-color: #ae7f5f; color: whitesmoke; "
          >
            Login
          </button>
          <button
            type="button"
            class="btn mb-2 custom-margin mx-2"
            style="background-color: #ae7f5f; color: whitesmoke"
          >
            Join
          </button>
        </div>
        </Form>
      </div>
    </div>
