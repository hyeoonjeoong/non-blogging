<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif+KR&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <style>
    * {
      font-family: "Noto Serif KR", serif;
    }

    body {
      background-color: #ece8e4;
    }

    /* .form-control {
      border-radius: 5px;

    } */
    /* .custom-margin {
    margin-left: 10px;
  } */
    .btnBox {
      display: flex;
    }

    ::placeholder {
      text-align: center;
      color: #717123;
    }

    #main {
      text-align: center;
    }
  </style>
  <body>
    <div id="main" class="mx-auto py-5 mt-5" style="width: 30%">
      <a href="" style="display: flex">
        <img src="/logo.png" width="170px" class="mx-auto" alt="non-blog"
      /></a>

      <form method="post" action="/user/login" class="py-3" name="login">
        <input
          type="text"
          name="idBox"
          placeholder="ID"
          class="mb-2 form-control err"
          style="border: none"
          id="email"
        />
        <input
          type="password"
          name="pwBox"
          placeholder="PW"
          class="mb-2 form-control err"
          style="border: none"
          id="password"
        />
        <div id="noValue"></div>
        <div class="btnBox text-center mx-auto py-3" style="width: fit-content">
          <button
            type="button"
            class="btn mb-2 custom-margin"
            style="background-color: #ae7f5f; color: whitesmoke"
            onclick="clickLogin()"
          >
            Login
          </button>
          <button
            type="button"
            class="btn mb-2 custom-margin mx-2"
            style="background-color: #ae7f5f; color: whitesmoke"
            onclick="onJoin()"
          >
            Join
          </button>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
      const onJoin = () => {
        location.href = "/user/signup";
      };

      function clickLogin() {
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const alert = document.getElementById("noValue");

        if (email === "" || password === "") {
          alert.textContent = "아이디와 패스워드를 입력해주세요.😅";
          return false;
        } else {
          alert.textContent = "";
        }

        const data = {
          idBox: email,
          pwBox: password,
        };
        console.log(data);

        axios({
          method: "post", //^^
          url: "/user/login", //^^ 컨트롤러에서 찾을수없어서 에러.. 일단 여기까지...
          data: data,
        })
        .then((res) => {
          if(res.data.success == true){
            document.location.href = `/notebook/allblog`;
          }
          else{
            alert.textContent = "존재하지 않는 회원입니다.";
          }
        })
        .catch((err) => {
          console.log(err);
          alert.textContent = "로그인 중 오류가 발생하였습니다.";
        });
      }
    </script>
  </body>
</html>
